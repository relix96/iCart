<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        tools:context="com.example.guanzhuli.icart.SignUpActivity">
    <!--make it a round view-->

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="DADOS PESSOAIS"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="DADOS PESSOAIS" />

    <EditText
        android:id="@+id/sign_up_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Primeiro Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_postCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Apelido"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/sign_up_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Numero de TelemÃ³vel"
        android:inputType="number" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
        android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_password"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Retype Password"
        android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_password2"/>

    <Button
        android:id="@+id/button_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorButton"
        android:layout_marginBottom="30dp"
        android:text="Continue" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/to_sign_in"
            android:clickable="true"
            android:text="Have an account? Sign in"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
