<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:backgroundTint="#FAFAFA"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guanzhuli.icart.SignUpActivity2">
    <!--make it a round view-->

    <ImageButton
        android:id="@+id/backToMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:clickable="true" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="MORADA"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="MORADA" />

    <EditText
        android:id="@+id/sign_up_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Morada"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_postCode"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:hint="CÃ³digo Postal"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_City"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:hint="Localidade"
        android:layout_marginBottom="10dp"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/button_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorButton"
        android:text="Registar" />

</LinearLayout>
